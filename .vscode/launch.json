    "version": "0.2.0",
    "configurations": [
        {
            "name": "API Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/basicapi/BasicApi.csproj"
        },
        {
            "name": "BasicWeb: Vite Dev Server",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/basicweb/basicweb",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "port": 5173,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}